generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// A tiny model to test local MySQL connectivity and Prisma Client
// Student/Team schema provided by user
model Student {
  sic_no   String   @id
  name      String
  email     String   @unique
  phone_no  String?
  password  String
  role      Role     @default(MEMBER)
  year      Year
  teams     TeamMember[]
  // proposals and inbox relations removed per user request
}

model ProblemStatement {
  id           Int      @id @default(autoincrement())
  title        String
  team         Team?
}

model Team {
  id                Int            @id @default(autoincrement())
  team_name         String
  problemStatement  ProblemStatement? @relation(fields: [problem_id], references: [id])
  problem_id        Int?            @unique
  members           TeamMember[]
}

model TeamMember {
  team_id   Int
  sic_no   String
  role      TeamRole

  team      Team     @relation(fields: [team_id], references: [id])
  student   Student  @relation(fields: [sic_no], references: [sic_no])

  @@id([team_id, sic_no])
  @@unique([sic_no])
}


enum Role {
  MEMBER
  ADMIN
  SUPERADMIN
}

enum TeamRole {
  LEADER
  MEMBER
}

// Academic year enum (adjust values as needed)
enum Year {
  FIRST
  SECOND
  THIRD
  FOURTH
  FIFTH
}

